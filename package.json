{
	"name": "moe-bangumi",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"prod:local": "turbo build && turbo prod:local",
		"lint": "biome check .",
		"test": "turbo test",
		"db:push": "turbo db:generate db:push",
		"db:migrate": "turbo db:migrate",
		"db:studio": "turbo db:studio",
		"release": "npx changelogen --output && bumpp",
		"prepare": "husky || true"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"bumpp": "^9.4.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"turbo": "^2.0.6",
		"typescript": "^5.4.5"
	},
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"version": "0.0.1"
}
