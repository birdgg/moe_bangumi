generator client {
  provider = "prisma-client-js"
}

generator nestjsDto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src/generated"
  outputToNestJsResourceStructure = "false"
  exportRelationModifierClasses   = "true"
  reExport                        = "false"
  createDtoPrefix                 = "Create"
  updateDtoPrefix                 = "Update"
  dtoSuffix                       = "Dto"
  entityPrefix                    = ""
  entitySuffix                    = ""
  fileNamingStyle                 = "camel"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Bangumi {
  id          Int       @id @default(autoincrement())
  nameZh      String    @map("name_zh")
  nameJp      String?   @map("name_jp")
  nameEn      String?   @map("name_en")
  poster      String    @default("default")
  season      Int       @default(1)
  year        Int?
  group       String?
  sub         String?
  dpi         String?
  source      String?
  isCompleted Boolean   @default(false) @map("is_completed")
  offset      Int       @default(0)
  savePath    String    @map("save_path")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deleted     Boolean   @default(false)
  /// @DtoEntityHidden
  episode     Episode[]

  @@unique([nameZh, season])
}

model Episode {
  id        Int      @id @default(autoincrement())
  name      String
  episode   Int
  bangumiId Int      @map("bangumi_id")
  bangumi   Bangumi  @relation(fields: [bangumiId], references: [id])
  torrent   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deleted   Boolean  @default(false)

  @@unique([bangumiId, episode])
}
