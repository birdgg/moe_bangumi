generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Bangumi {
  id          Int       @id @default(autoincrement())
  nameZh      String    @map("name_zh")
  nameJp      String?   @map("name_jp")
  nameEn      String?   @map("name_en")
  poster      String    @default("default")
  season      Int       @default(1)
  year        Int?
  isCompleted Boolean   @default(false) @map("is_completed")
  offset      Int       @default(0)
  savePath    String    @map("save_path")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deleted     Boolean   @default(false)
  episode     Episode[]

  @@unique([nameZh, season])
}

model Episode {
  id        Int      @id @default(autoincrement())
  name      String
  bangumiId Int      @map("bangumi_id")
  bangumi   Bangumi  @relation(fields: [bangumiId], references: [id])
  episode   Int
  sub       String
  source    String?
  dpi       String
  torrent   String
  savePath  String   @map("save_path")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deleted   Boolean  @default(false)

  @@unique([bangumiId, episode])
}

model Setting {
  id          Int @id @default(autoincrement())
  rssInterval Int @default(7200) @map("rss_interval")

  downloaderHost     String @map("downloader_host")
  downloaderUsername String @map("downloader_username")
  downloaderPassword String @map("downloader_password")
  downloaderPath     String @map("downloader_path")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
