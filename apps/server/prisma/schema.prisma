generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider    = "zod-prisma"
  modelSuffix = "Schema"
  output      = "../../../packages/shared-api/src/generated/zod"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/data.db"
}

model Bangumi {
  id        Int      @id @default(autoincrement())
  nameZh    String   @map("name_zh")
  nameJp    String?  @map("name_jp")
  nameEn    String?  @map("name_en")
  poster    String   @default("default")
  season    Int      @default(1)
  // 字幕组
  group     String?
  // 字幕
  sub       String?
  // 分辨率
  dpi       String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  // episode     Episode[]

  @@unique([nameZh, season])
}

