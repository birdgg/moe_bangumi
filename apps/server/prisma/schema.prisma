generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider    = "zod-prisma"
  modelSuffix = "Schema"
  output      = "../../../packages/shared-api/src/generated/zod"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/data.db"
}

model Bangumi {
  id         Int       @id @default(autoincrement())
  originName String    @map("origin_name")
  nameZh     String?   @map("name_zh")
  nameJp     String?   @map("name_jp")
  nameEn     String?   @map("name_en")
  poster     String    
  season     Int       
  // 字幕组
  group      String?
  // 字幕
  sub        String?
  // 分辨率
  dpi        String?
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  episodes   Episode[]

  @@unique(name: "name_season",[originName, season])
  @@index([originName, season])
}

model Episode {
  id        Int      @id @default(autoincrement())
  num   Int      @map("num")
  bangumiId Int      @map("bangumi_id")
  bangumi   Bangumi  @relation(fields: [bangumiId], references: [id])
  torrent   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique(name: "bangumi_episode", [num, bangumiId])
}
