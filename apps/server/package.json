{
	"name": "server",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"dev": "NODE_ENV=development nest start --watch",
		"prod": "NODE_ENV=production node dist/main",
		"start": "pnpm db:deploy && pnpm prod",
		"prod:local": "pnpm copy:client && NODE_ENV=development node dist/main",
		"copy:client": "node scripts/copy-client.cjs",
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"db:reset": "prisma migrate reset",
		"db:studio": "prisma studio",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts"
	},
	"dependencies": {
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.0.0",
		"@nestjs/event-emitter": "^2.0.4",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/schedule": "^4.1.0",
		"@nestjs/serve-static": "^4.0.2",
		"@prisma/client": "5.16.2",
		"@repo/api": "workspace:*",
		"@ts-rest/nest": "^3.45.2",
		"async-mutex": "^0.5.0",
		"axios": "^1.7.2",
		"cache-manager": "^5.7.2",
		"cheerio": "1.0.0-rc.12",
		"nestjs-prisma": "^0.23.0",
		"pino": "^9.2.0",
		"reflect-metadata": "^0.1.13",
		"rss-parser": "^3.13.0",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@repo/typescript-config": "workspace:*",
		"@scalar/nestjs-api-reference": "^0.3.100",
		"@swc/cli": "^0.4.0",
		"@swc/core": "^1.6.13",
		"@ts-rest/core": "^3.45.2",
		"@types/express": "^4.17.17",
		"@types/node": "^20.3.1",
		"@types/supertest": "^2.0.12",
		"@vitest/coverage-v8": "^2.0.2",
		"pino-pretty": "^11.2.1",
		"prisma": "^5.16.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.2",
		"unplugin-swc": "^1.5.1",
		"vitest": "^2.0.2",
		"zod-prisma": "^0.5.4",
		"@ts-rest/open-api": "^3.45.2"
	}
}
